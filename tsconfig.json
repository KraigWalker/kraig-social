{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "strict": false,
    // Production-specific options:
    "removeComments": true,
    //"noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/server.tsx", "src/types/**/*.d.ts"]
}
